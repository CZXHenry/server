<!doctype html>
<html lang="zh">
<head>
  {{template "partials/header"}}

  <title>图蜂运营管理系统</title>

  <link rel="stylesheet" href="/static/css/index.css">
</head>

<body>

  {{template "partials/index/nav"}}

  <div class="container-fluid">
    <div class="row">

      {{template "partials/index/menu"}}

      <main role="main" class="col-md-11 ml-sm-auto pt-3 px-4">

        <div class="row mb-3">
          <h2 class="col">照片直播业务</h2>
          <a role="button" href="/photolives" class="btn">返回</a>
        </div>
        <form>
          <div class="form-group">
            <label for="inputOrganization">请选择社团</label>
            <select class="form-control" id="inputOrganization">
              {{range .Organizations}}
              {{end}}
            </select>
          </div>
          <div class="form-group">
            <label for="inputActivity">请选择社团活动</label>
            <select class="form-control" id="inputActivity">
            </select>
          </div>
          <div class="form-group">
            <label for="inputActivityStage">请选择活动阶段</label>
            <select class="form-control" id="inputActivityStage">
              <option>无</option>
            </select>
          </div>
          <div class="form-group">
            <label for="inputExpectMembers">预期人数</label>
            <input type="number" class="form-control" id="inputExpectMembers" placeholder="预期人数">
          </div>
          <div class="form-group">
            <label for="inputAdProgress">广告谈判进度</label>
            <textarea type="text" class="form-control h-150px" id="inputAdProgress"></textarea>
          </div>
          <div class="row form-group">
            <div class="form-group col">
              <label for="inputManager">请选择对接负责人</label>
              <select class="form-control" id="inputManager">
                <option>无</option>
                {{range .Users}}
                {{end}}
              </select>
            </div>
            <div class="form-group col">
              <label for="inputPhotographerManager">请选择摄影监理</label>
              <select class="form-control" id="inputPhotographerManager">
                <option>无</option>
                {{range .Users}}
                {{end}}
              </select>
            </div>
          </div>
          <div class="form-group">
            <button type="button" class="btn btn-primary col">添加联络人</button>
            <label for="inputSupervisor"></label>
            <select class="form-control" id="inputSupervisor">
              {{range .Users}}
              {{end}}
            </select>
          </div>

        </form>

      </main>

    </div>
  </div>

  <script src="/static/js/bootstrap/bootstrap.min.js" charset="utf-8"></script>
  <script src="/static/js/index.js" charset="utf-8"></script>

</body>

</html>
